        "class DoorAgent:\n",
        "  def __init__(self):\n",
        "    self.locked = True\n",
        "  def perceive(self, action):\n",
        "      if action == \"unlocked\":\n",
        "        self.locked = False\n",
        "      elif action == \"locked\":\n",
        "        self.locked = True\n",
        "  def status(self):\n",
        "          return \"locked \" if self.locked else \"unlocked\"\n",
        "agent = DoorAgent()\n",
        "agent.perceive(\"unlocked\")\n",
        "print(agent.status())\n",
        ""
