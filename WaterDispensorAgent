        "class WaterDispensorAgent:\n",
        "  def __init__(self):\n",
        "        self.state = \"idle\"\n",
        "  def update(self, command):\n",
        "     if command == \"dispense\":\n",
        "       self.state = \"dispensing\"\n",
        "     elif command == \"stop\":\n",
        "          self.state = \"idle\"\n",
        "          return f\"water dispensor {self.state}\"\n",
        "agent = WaterDispensorAgent()\n",
        "print(agent.update(\"dispense\"))\n",
        "print(agent.update(\"stop\"))\n"
      ]
